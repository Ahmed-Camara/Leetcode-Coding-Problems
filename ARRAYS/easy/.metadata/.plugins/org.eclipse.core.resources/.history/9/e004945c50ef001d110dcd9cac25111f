	public static int removeElement(int []nums, int val) {
		int count = 0;
		/*for(int i = 0; i < nums.length; i++) {
			if(nums[i] == val) {
				nums[i] = -1;
			}
		}
		
		for(int i = 0; i < nums.length; i++) {
			System.out.print(nums[i]+" ");
		}*/
		System.out.println();
		int k = 0;
		
		for(int i = 0; i < nums.length; i++) {
			if(nums[i] != val) {
				nums[k] = nums[i];
				k++;
				//count++;
			}
		}
		
		for(int i = 0; i < nums.length; i++) {
			System.out.print(nums[i]+" ");
		}
		return count;
	}

